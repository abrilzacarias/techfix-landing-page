<style>
  /* Animaciones para el texto */
  .text-reveal {
    display: block;
    overflow: hidden;
  }
  
  .text-reveal > * {
    transform: translateY(100%);
    opacity: 0;
    animation: revealText 0.8s cubic-bezier(0.5, 0, 0.1, 1) forwards;
  }
  
  .text-reveal-delayed > * {
    transform: translateY(100%);
    opacity: 0;
    animation: revealText 0.8s cubic-bezier(0.5, 0, 0.1, 1) 0.3s forwards;
  }
  
  @keyframes revealText {
    from {
      transform: translateY(100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  /* Animación de resaltado para "Optimiza" */
  .highlight-animation {
    background-image: linear-gradient(120deg, rgba(var(--color-primary-400-rgb), 0.2) 0%, rgba(var(--color-primary-400-rgb), 0.2) 100%);
    background-repeat: no-repeat;
    background-size: 0% 40%;
    background-position: 0 88%;
    animation: highlightText 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.5s forwards;
    display: inline;
  }
  
  @keyframes highlightText {
    to {
      background-size: 100% 40%;
    }
  }
  
  /* Animación para el botón */
  .pulse-animation {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .pulse-animation:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(var(--color-primary-600-rgb), 0.3);
  }
  
  .pulse-animation::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 150%;
    height: 150%;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
    transition: transform 0.5s, opacity 0.5s;
  }
  
  .pulse-animation:hover::after {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  
  /* Animación para la imagen */
  .image-container {
    position: relative;
    transform: translateY(50px);
    opacity: 0;
    animation: fadeInUp 1s ease forwards 0.2s;
  }
  
  @keyframes fadeInUp {
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  .parallax-image {
    transform-style: preserve-3d;
    transition: transform 0.1s ease-out;
    will-change: transform;
  }
  
  .image-shadow {
    position: absolute;
    bottom: -20px;
    left: 10%;
    width: 80%;
    height: 20px;
    background: radial-gradient(ellipse at center, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0) 80%);
    border-radius: 50%;
    z-index: -1;
    transform: translateY(10px);
    opacity: 0;
    animation: shadowFadeIn 1s ease forwards 0.5s;
  }
  
  @keyframes shadowFadeIn {
    to {
      opacity: 0.5;
      transform: translateY(0);
    }
  }
  
  /* Elementos decorativos animados */
  .shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
  }
  
  .shape-1 {
    top: 10%;
    left: 5%;
    width: 100px;
    height: 100px;
    background: var(--color-primary-400);
    animation: floatAnimation 8s infinite ease-in-out;
  }
  
  .shape-2 {
    top: 60%;
    left: 15%;
    width: 50px;
    height: 50px;
    background: var(--color-secondary-400);
    animation: floatAnimation 12s infinite ease-in-out reverse;
  }
  
  .shape-3 {
    top: 20%;
    right: 10%;
    width: 70px;
    height: 70px;
    background: var(--color-primary-600);
    animation: floatAnimation 10s infinite ease-in-out 1s;
  }
  
  .shape-4 {
    bottom: 15%;
    right: 5%;
    width: 120px;
    height: 120px;
    background: var(--color-secondary-600);
    animation: floatAnimation 15s infinite ease-in-out 2s;
  }
  
  @keyframes floatAnimation {
    0% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(10px, 10px) rotate(5deg);
    }
    50% {
      transform: translate(0, 20px) rotate(0deg);
    }
    75% {
      transform: translate(-10px, 10px) rotate(-5deg);
    }
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
  }
</style>

<script>
  // Efecto parallax para la imagen
  document.addEventListener('DOMContentLoaded', () => {
    const parallaxImage = document.querySelector('.parallax-image');
    
    if (parallaxImage) {
      document.addEventListener('mousemove', (e) => {
        const mouseX = e.clientX / window.innerWidth - 0.5;
        const mouseY = e.clientY / window.innerHeight - 0.5;
        
        // Movimiento suave de la imagen siguiendo el cursor
        parallaxImage.style.transform = `perspective(1000px) rotateY(${mouseX * 5}deg) rotateX(${mouseY * -5}deg) translateZ(10px)`;
      });
    }
  });
</script>